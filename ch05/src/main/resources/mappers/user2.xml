<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.ch05.mapper.User2Mapper">
    <insert id="insertUser2">
        INSERT INTO USER2 VALUES (#{userid}, #{name}, #{birth}, #{age});
    </insert>
    <select id="selectAllUser2" resultType="kr.co.ch05.ch05.dto.User2DTO">
        SELECT * FROM USER2;
    </select>
    <select id="selectUser2" resultType="kr.co.ch05.ch05.dto.User2DTO">
        SELECT * FROM USER2 WHERE userid=#{userid};
    </select>
    <update id="updateUser2">
        UPDATE USER2 SET
        name=#{name},
        birth=#{birth},
        age=#{age}
        WHERE
        userid=#{userid};
    </update>
    <delete id="deleteUser2">
        DELETE FROM USER2 WHERE userid=#{userid};
    </delete>

</mapper>